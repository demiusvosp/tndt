{% extends 'base_layout.html.twig' %}

{% block title %}
    {{ project.name }} - {{ 'project.edit.title'|trans }}
{% endblock %}
{% block page_title%}
    {{ project.name }} - {{ 'project.edit.title'|trans }}
{% endblock %}

{% block page_content %}
<div class="row row-cards">
    <div class="col-xl-8 col-lg-10 col-md-12">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    {% set currentPage = app.request.attributes.get('_route') %}
                    <li class="nav-item">
                        <a class="nav-link {{ currentPage == 'project.edit' ? 'active': '' -}}"
                           href="{{ path('project.edit', {'suffix':project.suffix}) }}"
                        >
                            {{- 'project.edit.common'|trans -}}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ currentPage == 'project.edit.task_settings' ? 'active': '' -}}"
                           href="{{ path('project.edit.task_settings', {'suffix':project.suffix}) }}"
                        >
                            {{- 'project.edit.task_settings'|trans -}}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ currentPage == 'project.edit.permissions' ? 'active': '' -}}"
                           href="{{ path('project.edit.permissions', {'suffix':project.suffix}) }}"
                        >
                            {{- 'project.edit.permsions'|trans -}}
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                {% block edit_page_body %}
                {% endblock %}
            </div>
            <div class="card-footer">
                {% block edit_page_footer%}
                {% endblock %}
            </div>
        </div>
    </div>
    <div class="col-xxl-2 col-xl-3 col-lg-4 col-md-6">
        {% block edit_page_after %}
        {% endblock %}
    </div>
</div>
{% endblock %}
