{% extends 'base.html.twig' %}
{% import 'project/macro.html.twig' as mProject %}

{% block title %}{{ 'project.list'|trans }}{% endblock %}
{% block page_title%}{{ 'project.list'|trans }}{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="row">
        {% for project in projects %}
            <div class="col-md-3">
                {{ mProject.snippet(project, 500) }}
            </div>
        {% endfor %}
        <div class="col-md-3">
            {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
                {% block box_title %}
                    {{ 'project.new_project'|trans }}
                {% endblock %}
                {% block box_body %}
                    <a class="btn btn-success btn-lg" href="{{ path('project.create') }}">{{ 'project.create'|trans }}</a>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}