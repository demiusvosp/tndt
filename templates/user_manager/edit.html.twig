{% extends 'one_block_layout.html.twig' %}

{% block title %} {{ user.username }} - 'user.edit'|trans }} {% endblock %}
{% block page_title%}{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block box_title %}
    {{ user.username }} - {{ 'user.edit'|trans }}
{% endblock %}
{% block box_body %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
    {{ form_row(form.locked) }}
{% endblock %}

{% block box_footer %}
    <div class="form-footer-buttons">
        <button type="submit" class="btn btn-success">{{ 'Edit'|trans }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}