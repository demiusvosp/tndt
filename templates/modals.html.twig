<!-- Confirm -->
<div class="modal fade" id="modalConfirm" tabindex="-1" role="dialog"aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ 'confirm.title'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">{{ 'confirm.yes'|trans }}</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'confirm.no'|trans }}</button>
            </div>
        </div>
    </div>
</div>
