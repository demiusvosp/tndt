{% extends 'base.html.twig' %}

{% block title %} {{ user.username }} - {{ (isSelf)?'user.edit'|trans:'user.self_edit'|trans }} {% endblock %}
{% block page_title%}{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    {{ form_start(form) }}
    {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
        {% block box_title %}
            {{ user.username }} - {{ (isSelf)?'user.edit'|trans:'user.self_edit'|trans }}
        {% endblock %}
        {% block box_body %}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.password) }}
            {% if form.locked is defined %}
                {{ form_row(form.locked) }}
            {% endif %}
            <hr>
            <button type="submit" class="btn btn-success">{{ 'Edit'|trans }}</button>
        {% endblock %}
    {% endembed %}
    {{ form_end(form) }}
{% endblock %}