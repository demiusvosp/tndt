{% extends 'base_layout.html.twig' %}

{% block title %} {{ user.username }} - {{ 'user.self_edit'|trans }} {% endblock %}
{% block page_title%}{{ user.username }} - {{ 'user.self_edit'|trans }}{% endblock %}

{% block page_content %}
<div class="row row-cards">
    <div class="col-xl-8 col-lg-10 col-md-12">
        <div class="card">
        {{ form_start(form) }}
            <div class="card-body">
                <div class="col-xl-6 col-lg-8 col-md-12">
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                </div>
            </div>
            <div class="card-footer">
                <div class="form-footer-buttons">
                    <button type="submit" class="btn btn-success">{{ 'Edit'|trans }}</button>
                </div>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}