{% extends 'base.html.twig' %}

{% block title %}TnDT - {{ user.username }}{% endblock %}
{% block page_title%}{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-10">
            {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
                {% import 'user/_macro.html.twig' as mUser %}
                {% block box_title %}
                    {{ user.name }}
                {% endblock %}
                {% block box_body %}
                    <div class="row">
                        <div class="col-md-4">
                            {{ 'user.username.label'|trans }}: {{ user.username }}
                        </div>
                        <div class="col-md-4">
                            {{ 'user.createdAt.label'|trans }}: {{ user.createdAt|ago }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            {{ 'user.name.label'|trans }}: {{ user.name(true) }}
                        </div>
                        <div class="col-md-4">
                            {{ 'user.lastLogin.label'|trans }}:
                                {% if user.lastLogin %}{{ user.lastLogin|ago }}{% else %}{{ 'Never_logined'|trans }}{% endif %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            {{ 'user.email.label'|trans }}: {{ user.email }}
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-2">
            {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
                {% block box_title %}
                    {{ 'ControlPanel'|trans }}
                {% endblock  %}
                {% block box_body %}
                    <div class="btn-group-vertical" role="toolbar" aria-label="{{ 'ControlPanel'|trans }}">
                        <div class="btn-group-vertical" role="group">
                            {% if isSelf or is_granted('ROLE_ROOT') %}
                                <a class="btn btn-default btn-secondary" href="{{ path('user.edit', {'username': user.username}) }}">{{ 'Edit_user'|trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}