{% extends 'one_block_layout.html.twig' %}
{% import 'project/_macro.html.twig' as mProject %}

{% block title %}{{ 'Create_doc'|trans }}{% endblock %}
{% block page_title%}
    {% if project_manager.isProjectContext %}{{ mProject.badge(project_manager.project) }} - {% endif %}
    {{ 'Create_doc'|trans }}
{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block box_title %}
    {# пока это повторяет заголовок, но может это будет многостраницчный мастер, и десь будет описание шага #}
{% endblock %}
{% block box_body %}
    {{ form_start(form) }}
    {{ form_row(form.caption) }}
    {{ form_row(form.project) }}
    {{ form_row(form.abstract) }}
    {{ form_row(form.body) }}
{% endblock %}

{% block box_footer %}
    <div class="pull-right">
        <button type="submit" class="btn btn-success">{{ 'Edit'|trans }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}