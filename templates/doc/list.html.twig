{% extends 'base.html.twig' %}

{% block title %}{{ project.suffix }} - {{ 'Doc_list'|trans }}{% endblock %}
{% block page_title %}  {% endblock %}
{% block page_subtitle %}{% endblock %}

{% block page_content %}
    {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
        {% import 'project/macro.html.twig' as mProject %}
        {% import 'doc/macro.html.twig' as mDoc %}

        {% block box_title %}
            {{ mProject.badge(project) }} - {{ 'Doc_list'|trans }}
        {% endblock %}
        {% block box_body %}
            <table class="table table-condensed">
                <tr>
                    <th>{{ knp_pagination_sortable(docs, 'doc.No'|trans, 't.no') }}</th>
                    <th>{{ knp_pagination_sortable(docs, 'doc.caption.label'|trans, 't.caption') }}</th>
                    <th>{{ knp_pagination_sortable(docs, 'doc.created.label'|trans, 't.createdAt') }}</th>
                    <th>{{ knp_pagination_sortable(docs, 'doc.updated.label'|trans, 't.updatedAt') }}</th>
                </tr>
                {%  for doc in docs %}
                    <tr>
                        <td>
                            <a class="invisible_link" href="{{ path('doc.index', doc.getUrlParams) }}">
                                <span class="{{ doc.isArchived ? 'text-muted' }}">
                                    {{ doc.no }}
                                </span>
                            </a>
                        </td>
                        <td>
                            <a class="invisible_link" href="{{ path('doc.index', doc.getUrlParams) }}">
                                <span class="{{ doc.isArchived ? 'text-muted' }}">
                                    {{ doc.caption(160) }}
                                </span>
                                {% if doc.isArchived %}<span class="label label-default">{{ 'archived'|trans }}</span>{% endif %}
                            </a>
                        </td>
                        <td>{{ doc.createdAt|ago }}</td>
                        <td>{{ doc.updatedAt|ago }}</td> {# localizeddate('medium', 'medium') #}
                    </tr>
                {% endfor %}
            </table>
            <hr>
            <nav class="text-center">
                {{ knp_pagination_render(docs) }}
            </nav>
        {% endblock %}
    {% endembed %}
{% endblock %}