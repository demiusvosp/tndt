<ol class="breadcrumb" aria-label="breadcrumbs">
    {% for item in breadcrumbs() %}
    <li class="breadcrumb-item {{ loop.last ? 'active' : '' }}">
        <a href="{{ item.action }}">
            {% if item.icon %}<i class="{{ item.icon }}"></i>{% endif %}
            {{ item.label }}
        </a>
    </li>
    {% endfor %}
</ol>