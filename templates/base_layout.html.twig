<html lang="{{ app.locale }}">
<head>
    <title>{% block title %}TnDT{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block stylesheets %}
        <link type="image/x-icon" rel="shortcut icon" href="{{ asset('build/images/favicon.ico') }}">
        <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    <div class="page">
        <aside class="navbar navbar-vertical navbar navbar-vertical navbar-expand-md" data-bs-theme="dark">
                {% include '_sidebar.html.twig' %}
        </aside>
        <header class="navbar navbar-expand-md d-print-none">
            {% include '_navbar.html.twig' %}
        </header>

        <div class="page-wrapper">

            <div class="page-header">
                <div class="container-xl">
                    <div class="col">
                    {% block page_head %}
                        <div class="row align-items-center mw-100">
                            <div class="col">
                                <div class="mb-1">
                                    {% include '_breadcrumbs.html.twig' %}
                                </div>
                            </div>
                            <h2 class="page-title">
                                {% block page_title %}{% endblock %}
                            </h2>
                        </div>
                    {% endblock %}
                    </div>
                </div>
            </div>

            <div class="page-body">
                <div class="container-xl">
                    {% block page_content %}
                        <div class="col">
                        </div>
                    {% endblock %}
                </div>
            </div>

            <footer class="footer footer-transparent">
                {% include '_footer.html.twig' %}
            </footer>

            {% include '_modals.html.twig' %}
            {% if app.request.get('addMdHelp') %}
                {{ render(controller('App\\Controller\\HomeController::helpMd')) }}
            {% endif %}
            {% block javascripts %}
                {{ encore_entry_script_tags('app') }}
            {% endblock %}
        </div>

    </div>
</body>
</html>
