{% extends 'one_block_layout.html.twig' %}

{% block title %} {{ task.taskId }} - {{ 'task.edit'|trans }} {% endblock %}
{% block page_title%}{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block box_title %}
    {{ task.taskId }} - {{ 'task.edit'|trans }}
{% endblock %}
{% block box_body %}
    {% form_theme form 'form_layout.html.twig' %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-1">
            {{ form_label(form.caption) }}
        </div>
        <div class="col-md-11">
            {{ form_widget(form.caption) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ form_label(form.description) }}<br>
            {{ form_widget(form.description) }}
        </div>
        <div class="col-md-4 form-right-column">
            {% if dictionary_enabled(task, 'task.stage') %}
                {{ form_row(form.stage) }}
            {% endif %}
            {% if dictionary_enabled(task, 'task.type') %}
                {{ form_row(form.type) }}
            {% endif %}
            {% if dictionary_enabled(task, 'task.priority') %}
                {{ form_row(form.priority) }}
            {% endif %}
            {% if dictionary_enabled(task, 'task.complexity') %}
                {{ form_row(form.complexity) }}
            {% endif %}
            {{ form_row(form.assignedTo) }}
        </div>
    </div>
{% endblock %}

{% block box_footer %}
    <div class="pull-right">
        <button type="submit" class="btn btn-success">{{ 'Edit'|trans }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}