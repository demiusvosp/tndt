{% macro no(task, style = null) %}
    {% if task.isClosed() %}<s>{% endif %}
    <a class="invisible_link"
       {{ (style ? 'style="'~style~'"' : '')|raw }}
       href="{{ path('task.index', {'taskId': task.taskId}) }}"
    >
        {{ task.no }}
    </a>
    {% if task.isClosed() %}</s>{% endif %}
{% endmacro %}

{% macro caption(task, limit = null) %}
    {% if task.isClosed() %}<s>{% endif %}
        <a class="invisible_link" href="{{ path('task.index', {'taskId': task.taskId}) }}">
            {% set label = task.caption %}
            {% if limit %}{% set label = label|u.truncate(limit, '...') %}{% endif %}
            {{ label }}
        </a>
    {% if task.isClosed() %}</s>{% endif %}
{% endmacro %}

{% macro taskLink(task) %}
    <a class="invisible_link" href="{{ path('task.index', {'taskId': task.taskId}) }}">
        <span {{ task.isClosed ? 'class="task-closed"' }}>
    {#        <i class="fa-solid fa-bars-progress"></i> не работает, ждет font-awesome 5.7 и значит и adminlte3#}
            {% import _self as this %}
            <b>{{ task.taskId }}</b>
                - {{ task.caption}}
                {{ badges(task) }}
        </span>
    </a>
{% endmacro %}

{% macro badge(task) %}
    <span {{ task.isClosed ? 'class="task-closed"' }}>
        <b>{{ task.taskId }}</b>
    </span>
{% endmacro %}

{% macro table(tasks, project) %}
    {% import _self as this %}
    {% import 'user/_macro.html.twig' as mUser %}
    {% set project = project ?? project_context.project %}
    <table class="table table-condensed task-table-small">
        <tr>
            <th class="no">#</th>
            <th class="name">{{ 'task.caption.label'|trans }}</th>
            {% if project and dictionary_enabled(project, 'task.type') %}
                <th>{{ 'task.type.label'|trans }}</th>
            {% endif %}
            <th>{{ 'task.assignedTo.label'|trans }}</th>
            <th>{{ 'task.updated.label'|trans }}</th>
        </tr>
        {% for task in tasks %}
            <tr>
                <td class="no">{{ this.no(task) }}</td>
                <td class="caption">{{ this.caption(task, 80) }}{{ badges(task, ['task.type']) }}</td>
                {% if project and dictionary_enabled(project, 'task.type') %}
                    <td>{{ dictionary_name(task, 'type') }}</td>
                {% endif %}
                <td>{{ mUser.badge(task.assignedTo) }}</td>
                <td>{{ task.updatedAt|ago }}</td>{# localizeddate('medium', 'medium') #}
            </tr>
        {% endfor %}
    </table>
{% endmacro %}

{% macro close_task_modal(task) %}
    <div class="modal fade" id="modalConfirmClose" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ 'confirm.title'|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {% set form = task_close_form(task) %}
                {% form_theme form 'form_condensed_theme.html.twig' %}
                {{ form_start(form, {'attr': {'class': 'closeTaskForm'}}) }}
                <div class="modal-body">
                    <div class="close-message">{{ 'task.close.text'|trans|nl2br }}</div>
                    {% if dictionary_enabled(task, 'stage') %}
                        <div class="close-stage">
                            {{ form_row(form.stage) }}
                        </div>
                    {% endif %}
                    <div class="close-comment">
                        {{ form_row(form.comment) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" data-dismiss="modal">{{ 'confirm.yes'|trans }}</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'confirm.no'|trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endmacro %}