{% extends 'one_block_layout.html.twig' %}
{% import 'project/_macro.html.twig' as mProject %}

{% block title %}{% trans %}task.create{% endtrans %}{% endblock %}
{% block page_title%}
    {% if project_context.isProjectContext %}{{ mProject.badge(project_context.project) }} - {% endif %}
    {% trans %}task.create{% endtrans %}
{% endblock %}
{% block page_subtitle %}{% endblock %}

{% block box_title %}
    {# пока это повторяет заголовок, но может это будет многостраницчный мастер, и десь будет описание шага #}
{% endblock %}
{% block box_body %}
    {% form_theme form 'form_layout.html.twig' %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-1">
            {{ form_label(form.caption) }}
        </div>
        <div class="col-md-11">
            {{ form_widget(form.caption) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ form_label(form.description) }}<br>
            {{ form_widget(form.description) }}
        </div>
        <div class="col-md-4 form-right-column">
            {{ form_row(form.type) }}
            {{ form_row(form.complexity) }}
            {{ form_row(form.assignedTo) }}
        </div>
    </div>
{% endblock %}

{% block box_footer %}
    <div class="pull-right">
        <button type="submit" class="btn btn-success">{{ 'Create'|trans }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}